# Database Configuration
DB_SERVER=localhost
DB_NAME=DocumentManagementDB
DB_USER=root
DB_PASSWORD=your-database-password

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long
JWT_ISSUER=DocumentManagementAPI
JWT_AUDIENCE=DocumentManagementClient
JWT_EXPIRY_MINUTES=1440

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.txt

# Environment
ASPNETCORE_ENVIRONMENT=Development